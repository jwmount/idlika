<% title 'Edit Gift' %>

<div id="li_body">
<%= render :partial => 'shared/sidebar' %>

<div id="li_content">
  <h1 class="edit_gift" %></h1>
  
  <div class="aglabel">Gift image:</div>
  <div class="agfield"><%= image_tag @gift.photo.url(:preview) %></div>
  <div class="clearer"></div>

<% form_for(@gift) do |f| %>
  <%= f.error_messages %>
  <div id="addgift_form">

  <div class="clearer"></div>
  <div class="aglabel">Gift Name:</div>
  <div class="agfield"> <%= f.text_field :name, :size=>'60' %></div>

  <div class="clearer"?></div>
  <div class="aglabel">Gift <%= f.label :description %>:</div>
  <div class="agfield"> <%= f.text_area :description, :size=>'43x3' %></div>

  <div class="clearer"?></div>
  <div class="aglabel">URL:</div>
  <div class="agfield"> <%= f.text_field :URL, :size=>'60' %></div>

<%= render :partial => 'placement', :locals => { :f => f } %>

  <div class="clearer"></div>
  <div class="aglabel"></div>
  <div class="agfield" stylesheet="margin:20px">
  <%= image_submit_tag("/images/btn_updategift_on.gif") %></div>

  <div class="clearer"></div>
  <div class="aglabel"></div>
  
  <!-- link_to 'Show', @gift -->
  <!-- link_to 'Back', gifts_path -->

  </div><!-- addgift_form -->
<% end %><!-- form -->

</div><!-- li_content -->

<div class="clearer"></div>
</div><!-- li_body -->
