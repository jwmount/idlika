<div id="li_body">
<%= render :partial => 'shared/sidebar' %>

<div id="li_content">
  <h1 class="edit_gift" %></h1>
  
  <div class="aglabel">Gift:</div>
  <div class="agfield"><%= image_tag @gift.photo.url(:preview) %></div>
  <div class="clearer"></div>

<% form_for(@gift) do |f| %>
  <%= f.error_messages %>
  <div id="addgift_form">

  <div class="clearer"></div>
  <div class="aglabel">Name:</div>
  <div class="agfield"> <%= f.text_field :name, :size=>'60' %></div>

  <div class="clearer"?></div>
  <div class="aglabel"><%= f.label :description %></div>
  <div class="agfield"> <%= f.text_area :description, :size=>'43x3' %></div>

  <div class="clearer"?></div>
  <div class="aglabel"><%= f.label :URL %></div>
  <div class="agfield"> <%= f.text_field :URL, :size=>'60' %></div>

  <div class="clearer"></div>
  <%= render :partial => 'which_registries_show_in' %>

  <div class="aglabel">Who can see this gift?:</div>


  <!-- fixed choices -->
  <div class="agfield"><%= check_box_tag 'gift', 'gift.i_can_see', true, :disabled=>true %>Me</div>
  <!-- div class="agfield">< f.check_box :i_can_see >Me</div -->
  <div class="agfield"><%= f.check_box :friends_can_see %>All My Friends</div>
  <!-- end fixed choices -->

  <!-- selected friends  -->
  <% unless @gift.user.friends.nil? %>
    <div class="clearer"></div>
    <%= render :partial => 'who_can_see' %>
  <% end %>
  <!-- end selected friends -->

  <div class="clearer"></div>
  <div class="aglabel"></div>
  <div class="agfield" stylesheet="margin:20px">
  <%= image_submit_tag("/images/btn_updatethisgift_on-2.gif") %></div>

  <div class="clearer"></div>
  <div class="aglabel"></div>
  
  <%= link_to 'Show', @gift %>
  <!-- link_to 'Back', gifts_path -->

  </div><!-- addgift_form -->
<% end %><!-- form -->

</div><!-- li_content -->

<div class="clearer"></div>
</div><!-- li_body -->
