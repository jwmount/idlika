<h1>Editing user</h1>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :login %><br />
    <%= f.text_field :login %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :cyrpted_password %><br />
    <%= f.text_field :cyrpted_password %>
  </p>
  <p>
    <%= f.label :salt %><br />
    <%= f.text_field :salt %>
  </p>
  <p>
    <%= f.label :remember_token %><br />
    <%= f.text_field :remember_token %>
  </p>
  <p>
    <%= f.label :remember_token_expiration %><br />
    <%= f.text_field :remember_token_expiration %>
  </p>
  <p>
    <%= f.label :activation_code %><br />
    <%= f.text_field :activation_code %>
  </p>
  <p>
    <%= f.label :deleted_at %><br />
    <%= f.datetime_select :deleted_at %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

